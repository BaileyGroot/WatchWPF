<Window x:Class="WatchWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchWPF"
        mc:Ignorable="d"
        Title="xMyWatch" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="tbTime" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" FontSize="40"></TextBlock>

        <Button Height="30" Width="80" Margin="0,40,0,0" HorizontalAlignment="Center" x:Name="Start" FontFamily="Arial" FontSize="15" FontWeight="Bold" Click="Start_Click">Start</Button>
        <Button Height="30" Width="80" Margin="0,105,0,0" HorizontalAlignment="Center" x:Name="Stop" FontFamily="Arial" FontSize="15" FontWeight="Bold" Click="Stop_Click">Stop</Button>
        <Button Height="30" Width="80" Margin="0,170,0,0" HorizontalAlignment="Center" x:Name="SetTimer" FontFamily="Arial" FontSize="15" FontWeight="Bold" Click="SetTimer_Click">Set Timer</Button>
        <TextBox x:Name="Boxed" HorizontalAlignment="Center" Margin="0,230,0,0" TextWrapping="Wrap" Width="80" Height="20" BorderThickness="2" BorderBrush="DarkGray" TextAlignment="Center"/>


    </Grid>
</Window>
